#include<stdio.h>
int main()
{
    int i,j,n,rows;
    printf("input: ");
    scanf("%d", &rows);


    for(i=1; i<=rows; i++)
    {
        for(j=rows; j>rows-i; j--)
        {
            printf("%d", j);
        }

        for(j=1; j<=rows-i; j++)
        {
            printf("%d", (rows - i + 1));
        }

        printf("\n");
    }
